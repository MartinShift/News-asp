@model News.Models.NewsModel 
@{
    Layout = "_Layout";
}
@section styles {
    <!-- Include Bootstrap CSS for styling this specific view -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
    <!-- Include custom CSS specific to this view, if needed -->
    <style>
        /* Custom CSS for adjusting text and image size and centering text */
        .news-title {
            font-size: 24px; /* Adjust the font size as needed */
            text-align: center;
            margin-bottom: 20px; /* Add margin to separate title from image */
        }

        .news-text {
            font-size: 18px; /* Adjust the font size as needed */
            text-align: center;
        }

        .news-image {
            max-width: 80%; /* Adjust the image size as needed */
            display: block;
            margin: 0 auto; /* Center the image horizontally */
        }
    </style>
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <img src="@Model.ImageUrl" class="card-img-top news-image" alt="@Model.Title">
                <div class="card-body">
                    <h1 class="card-title news-title">@Model.Title</h1>
                    <p class="card-text news-text">@Model.FullText</p>
                </div>
            </div>
            <a href="@Url.Action("Index", "News")" class="btn btn-primary mt-3">Back to News</a>
        </div>
    </div>
</div>
